<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_album_width"
    android:layout_height="@dimen/card_album_height"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardBackgroundColor="@color/musicplayer_light_cherry"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_light"
    card_view:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/playlist_image"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:contentDescription="@string/placeholder_text"
            android:scaleType="centerCrop"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playlist_name_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="6dp"
            android:text="@string/placeholder_text"
            android:textAppearance="@style/TextAppearance.MusicPlayer.TextRegular.Bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/playlist_image" />

        <TextView
            android:id="@+id/playlist_tracks_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"
            android:textAppearance="@style/TextAppearance.MusicPlayer.TextSmall"
            card_view:layout_constraintStart_toStartOf="@+id/playlist_name_card"
            card_view:layout_constraintTop_toBottomOf="@+id/playlist_name_card" />

        <ImageButton
            android:id="@+id/playlist_options_button"
            android:layout_width="@dimen/options_button_size"
            android:layout_height="0dp"
            card_view:layout_constraintDimensionRatio="1:1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_more_vert_24"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/playlist_name_card" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>