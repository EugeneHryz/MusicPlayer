<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vumeter="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_track_height"
    android:elevation="@dimen/standard_elevation"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/musicplayer_dark_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_dark">

        <ImageView
            android:id="@+id/track_album_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/track_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Track Title"
            android:textAppearance="@style/TextAppearance.MusicPlayer.TextRegular"
            app:layout_constraintEnd_toStartOf="@+id/equalizer_animation"
            app:layout_constraintStart_toEndOf="@+id/track_album_cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/track_artist_name"/>

        <TextView
            android:id="@+id/track_artist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Artist Name"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.MusicPlayer.TextTiny"
            app:layout_constraintEnd_toEndOf="@id/track_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/track_title"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintTop_toBottomOf="@id/track_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <io.gresse.hugo.vumeterlibrary.VuMeterView
            android:id="@+id/equalizer_animation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/track_options_button"
            vumeter:vumeter_blockNumber="3"
            vumeter:vumeter_blockSpacing="2dp"
            vumeter:vumeter_speed="6"
            vumeter:vumeter_backgroundColor="@color/musicplayer_white"
            vumeter:vumeter_startOff="true"
            vumeter:vumeter_stopSize="4dp"
            android:visibility="gone">
        </io.gresse.hugo.vumeterlibrary.VuMeterView>

        <ImageButton
            android:id="@+id/track_options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>